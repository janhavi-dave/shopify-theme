{%- if section.settings.enable_header_custom_style -%}

<style>
  .theme-logo img{
    max-width: {{ section.settings.logo_width }}px;
  }
  .header-area {
    background: {{ section.settings.bg_color }};
  }
  .header-area.sticky-bar.stick {
    background: {{ section.settings.bg_color_stick }};
  }
  .main-menu > nav > ul > li > a, 
  .header-right-wrap .header-search > a, 
  .cart-wrap > button span.icon-cart, 
  .cart-wrap > button span.cart-price,
  .header-right-wrap .setting-wrap button{
    color: {{ section.settings.menu_color }};
  }
  .main-menu > nav > ul > li:hover a, 
  .main-menu > nav > ul > li ul.mega-menu > li ul li a:hover, 
  .main-menu > nav > ul > li ul.submenu li a:hover, 
  .header-right-wrap .header-search > a:hover, 
  .cart-wrap > button:hover span.icon-cart, 
  .header-right-wrap .setting-wrap button:hover,
  .mobile-off-canvas-active .header-mobile-aside-wrap .mobile-menu-wrap .mobile-navigation nav .mobile-menu li ul li a:hover,
  .mobile-off-canvas-active .header-mobile-aside-wrap .mobile-menu-wrap .mobile-navigation nav li a:hover{
    color: {{ section.settings.menu_hover__color }};
  }
  .main-menu > nav > ul > li.angle-shape::before {
    border-bottom: 16px solid {{ section.settings.menu_hover_angle_color }};
  }
  .main-menu > nav > ul > li > a > span {
    background-color: {{ section.settings.menu_hover__color }};
  }
  .header-small-mobile .cart-wrap > button span.icon-cart, 
  .header-small-mobile .cart-wrap > button span.cart-price, 
  .header-small-mobile .header-right-wrap .setting-wrap button {
    color: {{ section.settings.menu_color }};
  }
  .header-small-mobile .cart-wrap > button span.icon-cart:hover, 
  .header-small-mobile .cart-wrap > button span.cart-price:hover, 
  .header-small-mobile .header-right-wrap .setting-wrap button:hover {
    color: {{ section.settings.menu_hover__color }};
  }
  .header-area .main-menu > nav > ul > li ul.mega-menu {
    width: {{ section.settings.megamenu_width }}px;
    left: {{ section.settings.megamenu_left_space }}px;
  }
  
  @media only screen and (min-width: 992px) and (max-width: 1199px) {
    
    .header-area .main-menu > nav > ul > li ul.mega-menu {
      width: {{ section.settings.megamenu_width_md }}px;
      left: {{ section.settings.megamenu_left_space_md }}px;
    }
    
  }
  
  
  
  .clickable-menu a:hover {
    color: {{ section.settings.menu_hover__color }};
  }
  .clickable-mainmenu {
    color: {{ section.settings.menu_hover__color }};
  }
  .clickable-mainmenu .clickable-mainmenu-icon button {
    color: {{ section.settings.menu_color }};
  }
  .clickable-mainmenu .clickable-mainmenu-icon button:hover {
    color: {{ section.settings.menu_hover__color }};
  }
  .clickable-mainmenu .clickable-menu-style ul li a {
    color: {{ section.settings.menu_color }};
  }
  .clickable-mainmenu .clickable-menu-style ul li a:hover {
    color: {{ section.settings.menu_hover__color }};
  }

  .slinky-menu a span span {
    color: {{ section.settings.menu_hover__color }};
  }
  .header-hm-7.stick .clickable-menu a {
    color: {{ section.settings.menu_color }}; 
  }
  .header-hm-7.stick .clickable-menu a:hover {
    color: {{ section.settings.menu_hover__color }};
  }

  .slinky-theme-default .next::after {
    color: {{ section.settings.menu_color }}; 
  }
  .slinky-theme-default .next:hover::after {
    color: {{ section.settings.menu_hover__color }};
  }
  .slinky-theme-default .back::before {
	background-color: {{ section.settings.menu_hover__color }};
}
  .clickable-menu.clickable-mainmenu-active i {
    color: {{ section.settings.menu_color }}; 
}
  .clickable-menu.clickable-mainmenu-active i:hover {
	color: {{ section.settings.menu_hover__color }};
}

  
  
  {%- assign main_header_font = section.settings.main_header_font -%}
  {%- assign header_font_drop_mega = section.settings.header_font_drop_mega -%}

  {{ main_header_font | font_face }}
  {{ header_font_drop_mega | font_face }}

  .header-area .main-menu > nav > ul > li > a,
  .header-area .main-menu > nav > ul > li > a > span,
  .header-area .header-right-wrap .setting-wrap .setting-content ul li h4,
  .header-area .cart-wrap .shopping-cart-content .shopping-cart-top h4,
  .header-area .header-right-wrap .cart-empty-title p,
  .header-area .main-search-active .sidebar-search-input .form-search input,
  .clickable-mainmenu .clickable-menu-style ul li a{
    font-family: {{ main_header_font.family }}, {{ main_header_font.fallback_families }};
    font-style: {{ main_header_font.style }};
    font-weight: {{ main_header_font.weight }};
    font-size:{{ section.settings.main_header_font_size }}px;
  }

  .header-area .main-menu > nav > ul > li ul.submenu li a,
  .header-area .main-menu > nav > ul > li ul.mega-menu > li ul li a,
  .header-area .main-menu > nav > ul > li ul.mega-menu > li a.menu-title,
  .header-right-wrap .setting-wrap .setting-content ul li ul li {
    font-family: {{ header_font_drop_mega.family }}, {{ header_font_drop_mega.fallback_families }};
    font-style: {{ header_font_drop_mega.style }};
    font-weight: {{ header_font_drop_mega.weight }};
    font-size:{{ section.settings.drop_header_font_size }}px;
  }

  
  .header-area.menu-left .main-menu {
    text-align:left
  }
  .header-area.menu-center .main-menu {
    text-align: center;
    margin-left: 0;
  }
  .header-area.menu-right .main-menu {
    text-align:right
  }
  

</style>

{%- endif -%}



