        {% if section.settings.service_style == 'style_one' %}
        
        <div class="single-feature mb-40">
          {%- if bset.show_service_img -%}
          <div class="feature-icon">
            {%- if bset.service_img -%}
            <img src="{{ bset.service_img | img_url: 'small' }}" alt="{{ image.alt }}">
            {%- else -%}
            <img src="https://via.placeholder.com/70x70" alt="{{ image.alt }}">
            {%- endif -%}
          </div>
          {%- endif -%}
          <div class="feature-content">
            {%- if bset.title != '' -%}
            <h4 style="color: {{ sset.ft_title_color }}">{{ bset.title }}</h4>
            {%- endif -%}

            {%- if bset.content != '' -%}
            <p style="color: {{ sset.ft_content_color }}">{{ bset.content }}</p>
            {%- endif -%}
          </div>
        </div>
        
        {% elsif section.settings.service_style == 'style_two' %}
        
        <div class="single-feature style_two mb-40">
          {%- if bset.show_service_img -%}
          <div class="feature-icon">
            {%- if bset.service_img -%}
            <img src="{{ bset.service_img | img_url: 'small' }}" alt="{{ image.alt }}">
            {%- else -%}
            <img src="https://via.placeholder.com/70x70" alt="{{ image.alt }}">
            {%- endif -%}
          </div>
          {%- endif -%}
          <div class="feature-content">
            {%- if bset.title != '' -%}
            <h4 style="color:#fff">{{ bset.title }}</h4>
            {%- endif -%}

            {%- if bset.content != '' -%}
            <p style="color:#fff">{{ bset.content }}</p>
            {%- endif -%}
          </div>
  
        
        {% endif %}
        
      </div>
      {% assign image_blocks = section.blocks | where: 'type', 'image' %}
