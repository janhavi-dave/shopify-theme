<div class="banner-area text-promoton-banner" id="section-{{ section.id }}">
  <div class="{% if section.settings.section_width == 'full_width' %}container-fluid {% elsif section.settings.section_width == 'box_width' %}container-fluid section-padding-1{% elsif section.settings.section_width == 'default' %}container default {% endif %}">
     <div class="row align-items-left {% if section.settings.content_position == 'right' %} content_position_right {% elsif section.settings.content_position == 'center' %}content_position_center {% elsif section.settings.content_position == 'left' %} content_position_left{% endif %}">
      <div class="col-sm-12">
        <div class="banner-bg-content scroll-zoom text-{% if section.settings.content_align == 'center' %}center{% elsif section.settings.content_align == 'right' %}right{% else %}left{% endif %}">
          {%- if section.settings.t1 != '' -%}
          <h3 style="color:{{ section.settings.t1_color }};">{{ section.settings.t1 }}</h3>
          {%- endif -%}

          {%- if section.settings.t2 != '' -%}
          <h2 style="color:{{ section.settings.t2_color }};">{{ section.settings.t2 }}</h2>
          {%- endif -%}
          
          {%- if section.settings.t3 != '' -%}
          <p style="color:{{ section.settings.t3_color }};">{{ section.settings.t3 }}</p>
          {%- endif -%}
          
          {%- if section.settings.btn1 != '' -%}
          <a class="ban_btn1"  href="{{ section.settings.btn1_url }}">{{ section.settings.btn1 }}</a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>
{%- include 'section-style' -%}

{% style %}
  #section-{{ section.id }}.text-promoton-banner .banner-bg-content a  {
    color: {{ section.settings.btn1_color }};
    border: 1px solid {{ section.settings.btn1_color }};
  }
  #section-{{ section.id }}.text-promoton-banner .banner-bg-content a:hover  {
    color: {{ section.settings.btn1_border_color }} !important;
    border: 1px solid {{ section.settings.btn1_border_color }} !important;
  }
{% endstyle %}


