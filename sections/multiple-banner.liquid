<div class="banner-area" id="section-{{ section.id }}">
  <div class="{% if section.settings.section_width == 'full_width' %}container-fluid {% elsif section.settings.section_width == 'box_width' %}container-fluid section-padding-1{% elsif section.settings.section_width == 'default' %}container default {% endif %}">
 	<div class="row">
      {%- for block in section.blocks -%}{%- case block.type -%}
      {%- when 'banner' -%}{%- assign bset = block.settings -%}
      <div class="col-lg-{{ bset.ban_col }} col-md-{{ bset.ban_md_col }} col-sm-{{ bset.ban_sm_col }} col-12 block_{{ block.id }}">
        
        
        <div class="single-banner mb-30 scroll-zoom">
          <a href="{{ bset.btn1_url }}">
            {%- if bset.img1 -%}
            <img class="animated" src="{{ bset.img1 | img_url: 'master' }}" alt="{{ image.alt }}">              
            {%- else -%}
            <img class="animated" src="https://via.placeholder.com/1710x574" alt="{{ image.alt }}">
            {%- endif -%}
          </a>
          <div class="banner-common banner-content{% if bset.text1_p == 'style_5' %}-2{% elsif bset.text1_p == 'style_7' %}-3{% endif %} banner-position-{% if bset.text1_p == 'style_5' %}5{% elsif bset.text1_p == 'style_6' %}6{% elsif bset.text1_p == 'style_7' %}7{% endif %}">
            {%- if bset.t1 != '' -%}
            <h{% if bset.text1_p == 'style_5' %}4{% else %}3{% endif %} class="multi_top">{{ bset.t1 }}</h{% if bset.text1_p == 'style_5' %}4{% else %}3{% endif %}>
            {%- endif -%}

            {%- if bset.t2 != '' -%}
            <h2 class="multi_bottom" >{{ bset.t2 }}</h2>
            {%- endif -%}

            {%- if bset.btn1 != '' -%}
            <a class="ban_btn1"  href="{{ bset.btn1_url }}">{{ bset.btn1 }}</a>
            {%- endif -%}
          </div>
        </div>
        
        
                  
        {% if block.settings.banner_custom_color %}
          {% style %}

          .block_{{ block.id }} .single-banner .banner-content-2 a.ban_btn1, 
          .block_{{ block.id }} .single-banner .banner-content-3 a.ban_btn1 {
          color: {{ bset.btn1_color }};
          border-bottom: 1px solid {{ bset.btn1_border_color }};
          }

          .banner-area .block_{{ block.id }} .single-banner .banner-common .multi_top{
          color: {{ bset.t1_color }};
          }
          .banner-area .block_{{ block.id }} .single-banner .banner-common .multi_bottom{
          color: {{ bset.t2_color }};
          }

          {% endstyle %}
        {% endif %}
        
        
        
        
      </div>
      {%- endcase -%}{%- endfor -%}
    </div>
  </div>
</div>
{%- include 'section-style' -%}





